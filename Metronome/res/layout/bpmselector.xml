<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" style="@style/Metro">
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/sub_bpm">
    

    <TextView
        android:id="@+id/bpmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Beats per Minute" />

    <ImageButton
        android:id="@+id/ibup_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bpmTitle"
        android:src="@android:drawable/arrow_up_float"
        android:tag="100" />

    <ImageButton
        android:id="@+id/ibup_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_up_float"
        android:tag="10" android:layout_toRightOf="@+id/ibup_100" android:layout_below="@+id/bpmTitle"/>

    <ImageButton
        android:id="@+id/ibup_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_up_float"
        android:tag="1" android:layout_toRightOf="@+id/ibup_10" android:layout_below="@+id/bpmTitle"/>
    
    <TextView
        android:id="@+id/tv_bpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:textAppearance="?android:attr/textAppearanceLarge" android:layout_below="@+id/ibup_100" android:typeface="normal"
        android:layout_centerHorizontal="true"/>
    
    <ImageButton
        android:id="@+id/ibdown_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_down_float"
        android:tag="-100" android:layout_below="@+id/tv_bpm"/>
    
    <ImageButton
        android:id="@+id/ibdown_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_down_float"
        android:tag="-10" android:layout_below="@+id/tv_bpm" android:layout_toRightOf="@+id/ibdown_100"/>

    <ImageButton
        android:id="@+id/ibdown_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_down_float"
        android:tag="-1" android:layout_toRightOf="@+id/ibdown_10" android:layout_below="@+id/tv_bpm"/>
</RelativeLayout>
</RelativeLayout>